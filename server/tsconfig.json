{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "lib": ["ES6"],
        "typeRoots": ["src/types", "node_modules/@types"],
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "removeComments": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src/*"],
    "exclude": ["node_modules", "dist"]
}